{
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 4,
    "semi": true,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "overrides": [
        {
            "files": "**/*.md",
            "options": {
                "printWidth": 80,
                "proseWrap": "always",
                "tabWidth": 2
            }
        }
    ]
}
