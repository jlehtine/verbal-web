{
    "printWidth": 120,
    "tabWidth": 4,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "overrides": [
        {
            "files": "src/frontend/VerbalWebDialog.tsx",
            "options": {
                "plugins": []
            }
        },
        {
            "files": "**/*.md",
            "options": {
                "printWidth": 80,
                "proseWrap": "always",
                "tabWidth": 2
            }
        },
        {
            "files": "**/*.html",
            "options": {
                "trailingComma": "none"
            }
        },
        {
            "files": "**/locales/**/*.json",
            "options": {
                "plugins": ["prettier-plugin-sort-json"],
                "jsonRecursiveSort": true
            }
        }
    ]
}
